@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "/Views/Shared/_LayoutForLoginAndReg.cshtml";
}
<br />
<br />
<br />
<br />
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h1 class="h3 mb-0">@ViewData["Title"]</h1>
                </div>
                <div class="card-body p-5">
                    <div class="row">
                        <div class="col-md-6">
                            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                <h2 class="h4 mb-4">Create a new account</h2>

                                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                                <div class="form-floating mb-3">
                                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                    <label asp-for="Input.Email">Email</label>
                                    <span asp-validation-for="Input.Email" class="text-danger small"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                                    <label asp-for="Input.Password">Password</label>
                                    <span asp-validation-for="Input.Password" class="text-danger small"></span>
                                </div>

                                <div class="form-floating mb-4">
                                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                                    <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                                </div>

                                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary rounded-pill py-2">
                                    <i class="fas fa-user-plus me-2"></i>Register
                                </button>

                                <div class="mt-3 text-center">
                                    <p class="text-muted small">
                                        By registering, you agree to our <a href="#">Terms of Service</a> and <a href="#">Privacy Policy</a>.
                                    </p>
                                </div>
                            </form>
                        </div>

                        <div class="col-md-6 border-start ps-5">
                            <section>
                                <h3 class="h4 mb-4">Sign up with</h3>

                                @{
                                    if ((Model.ExternalLogins?.Count ?? 0) == 0)
                                    {
                                       
                                    }
                                    else
                                    {
                                        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                            <div class="d-grid gap-2">
                                                @foreach (var provider in Model.ExternalLogins!)
                                                {
                                                    <button type="submit" class="btn btn-outline-primary rounded-pill" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">
                                                        <i class="fab fa-@provider.DisplayName.ToLower() me-2"></i>@provider.DisplayName
                                                    </button>
                                                }
                                            </div>
                                        </form>
                                    }
                                }

                                <div class="mt-4 pt-3 border-top">
                                    <p class="text-muted small mb-2">Already have an account?</p>
                                    <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-outline-secondary rounded-pill w-100">
                                        <i class="fas fa-sign-in-alt me-2"></i>Login
                                    </a>
                                </div>
                            </section>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <style>
        body {
            background-color: #f8f9fa;
        }

        .card {
            border-radius: 10px;
            border: none;
        }

        .form-control {
            border-radius: 8px;
            padding: 12px 15px;
        }

        .form-floating label {
            padding: 12px 15px;
        }

        .btn-primary {
            background-color: #4e73df;
            border: none;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: all 0.3s;
        }

            .btn-primary:hover {
                background-color: #3a5ec0;
                transform: translateY(-2px);
                box-shadow: 0 6px 8px rgba(0, 0, 0, 0.15);
            }

        .btn-outline-primary {
            transition: all 0.3s;
        }

            .btn-outline-primary:hover {
                transform: translateY(-2px);
            }
    </style>


    <partial name="_ValidationScriptsPartial" />
